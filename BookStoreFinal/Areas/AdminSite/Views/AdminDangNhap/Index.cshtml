@{
    Layout = null;
}
@model BookStoreFinal.Models.CUSTOMERS
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @*css bs4*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">
    <link rel="apple-touch-icon" href="~/Content/images/icon.png">

    <!-- Google font (font-family: 'Roboto', sans-serif; Poppins ; Satisfy) -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,300i,400,400i,500,600,600i,700,700i,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/plugins.css">
    <link rel="stylesheet" href="/Content/css/style.css">

    <!-- Cusom css -->
    <link rel="stylesheet" href="/Content/css/custom.css">

    <!-- Modernizer js -->
    <script src="/Content/js/vendor/modernizr-3.5.0.min.js"></script>
</head>
<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>

                <div class="login-form my-center">
                    <form action="@Url.Action("Login","AdminDangNhap")" method="post" enctype="multipart/form-data">
                        @*<input id="returnUrl" name="returnUrl" type="hidden" value="@Request.QueryString">*@
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="text-center" style="color:white">Tên đăng nhập</label>
                            <input type="text" class="form-control elem-center" placeholder="Tên đăng nhập" name="Username">
                            @Html.ValidationMessageFor(m => m.USERNAME, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="text-center" style="color:white">Mật khẩu</label>
                            <input type="password" class="form-control elem-center" placeholder="Mật khẩu" name="Password">
                            @Html.ValidationMessageFor(m => m.PASSWORD, "", new { @class = "text-danger" })
                        </div>


                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <style>
        .login-form {
            border: 3px solid #73AD21;
            padding: 10px;
            text-align: center
        }

        .my-center {
            margin: auto;
            width: 60%;
        }

        .elem-center {
            width: 50%;
            margin: 0 auto
        }
    </style>
    <script src="~/Content/js/vendor/jquery-3.2.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/js/plugins.js"></script>
    <script src="~/Content/js/active.js"></script>



</body>
</html>
