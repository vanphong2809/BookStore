@using BookStoreFinal.Models
<!DOCTYPE html>

<html>
<head>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <script src="~/Areas/AdminSite/vendor/jquery/dist/jquery.min.js"></script>

    <link href="~/Areas/AdminSite/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/AdminSite/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/AdminSite/vendor/themify-icons/css/themify-icons.css" rel="stylesheet" />
    <link href="~/Areas/AdminSite/vendor/flag-icon-css/css/flag-icon.min.css" rel="stylesheet" />
    <link href="~/Areas/AdminSite/vendor/selectFX/css/cs-skin-elastic.css" rel="stylesheet" />
    <link href="~/Areas/AdminSite/assets/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Areas/AdminSite/vendor/chart.js/dist/Chart.min.js"></script>
    <script src="~/Areas/AdminSite/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body>

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/Home/Index">
                    <h2>mua hàng</h2>
                </a>

            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="@Url.Action("Index","AdminTrangChu")"> <i class="menu-icon fa fa-dashboard"></i>Tổng quan </a>
                    </li>
                    <h3 class="menu-title">Chức năng</h3><!-- /.menu-title -->
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-laptop"></i>Quản lí sản phẩm</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-list"></i><a href="@Url.Action("TatCaSach","AdminQuanLySach")">Tất cả sách</a></li>
                            <li><i class="fa fa-plus"></i><a href="@Url.Action("ThemSach","AdminQuanLySach")">Thêm sách</a></li>
                        </ul>
                    </li>

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-user"></i>Quản lí người dùng</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-list"></i><a href="@Url.Action("TatCaKhachHang","AdminQuanLyKhachHang")">Tất cả người dùng</a></li>
                            @*<li><i class="fa fa-table"></i><a href="@Url.Action("ThemKhachHang","AdminQuanLyKhachHang")">Thêm người dùng</a></li>*@
                        </ul>
                    </li>

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-table"></i>Quản lí đơn hàng</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-list"></i><a href="@Url.Action("Index","AdminQuanLyDonHang")">Danh sách đơn hàng</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </nav>
    </aside>

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">

            <div class="header-menu">

                <div class="col-sm-8">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">

                        <div class="dropdown for-message">
                        </div>
                    </div>
                </div>
                @if (Session["ADMIN_SESSION"] != null)
                {
                    var @kh = Session["ADMIN_SESSION"] as CUSTOMERS;


                    <div class="col-sm-3">
                        @*<div class="user-area dropdown float-right">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img class="user-avatar rounded-circle" src="~/Content/Admin/images/admin.jpg" alt="User Avatar">
                                </a>

                                <div class="user-menu dropdown-menu">
                                    <a class="nav-link" href="#"><i class="fa fa-user"></i> Tài khoản</a>
                                    <a class="nav-link" href="@Url.Action("Logout","AdminDangNhap")"><i class="fa fa-power-off"></i> Thoát</a>
                                </div>
                            </div>*@

                        <h5>xin chào : @kh.NAME</h5>
                    </div>
                    <div class="col-sm-1"><a href="@Url.Action("Logout","AdminDangNhap")" class="btn btn-danger rounded-circle btn-sm"><i class="fa fa-power-off"></i></a></div>}
            </div>

        </header>
        <div class="content mt-3">
            @RenderBody()
        </div>

    </div> <!-- .content -->

    <script src="~/Areas/AdminSite/assets/js/widgets.js"></script>
    <script src="~/Areas/AdminSite/assets/js/main.js"></script>
    <script src="~/Areas/AdminSite/assets/js/dashboard.js"></script>
    <script src="~/Areas/AdminSite/assets/js/init-scripts/data-table/datatables-init.js"></script>
    <script src="~/Areas/AdminSite/assets/js/init-scripts/chart-js/chartjs-init.js"></script>
</body>
</html>
